<div class="container" id="index_container">
    <%@rooms.each do |room|%>
        <div class="row">
            <div class="col-xs-6 col-xs-offset-3">
                <%=link_to show_path(room.id), class: "room_btn" do%>
                    <h1>방 번호<span class="label label-default"><%=room.id%></span></h1>
                    <p>방장: <%=User.find(room.user_id).nickname%></p>
                    <p>참여자 수: <%=room.places.count%></p>
                <%end%>
            </div>
        </div>
        <div class="break_line">
        </div>
        <div class="padding">
        </div>
    <%end%>
    <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
            <%=link_to create_path,method: :get, class:"room_create_btn" do%>
                <h5>새로운 방 만들기</h5>
            <%end%>
        </div>
    </div>
</div>

